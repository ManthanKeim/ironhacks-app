#!/bin/bash

BASE_DIR="$(npm prefix)"

[[ -f ${BASE_DIR}/.npmrc ]] && . ${BASE_DIR}/.npmrc
[[ -f ${BASE_DIR}/.env ]] && . ${BASE_DIR}/.env

ANDROID_HOME="${ANDROID_HOME}" \
ANDROID_SERIAL="${ANDROID_SERIAL}" \
APP_DEBUG_APPDATA="${APP_DEBUG_APPDATA}" \
APP_DIR="${APP_DIR}" \
BASE_DIR="${BASE_DIR}" \
DEBUG_LOGGING="${DEBUG_LOGGING}" \
DEV_ENV="${DEV_ENV}" \
EDITOR="${EDITOR}" \
EXPO_DEBUG="${EXPO_DEBUG}" \
NODE_DEBUG="${NODE_DEBUG}" \
NODE_ENV="${NODE_ENV}" \
NODE_OPTIONS="${NODE_OPTIONS}" \
NODE_PATH="${NODE_PATH}" \
PROJECT_ROOT="${PROJECT_ROOT}" \
REACT_DEBUGGER="${REACT_DEBUGGER}" \
REACT_EDITOR="${REACT_EDITOR}" \
RUN_ABD_LOGCAT="${RUN_ABD_LOGCAT}" \
RUN_CHROMEDEVTOOLS="${RUN_CHROMEDEVTOOLS}" \
RUN_ENV="${RUN_ENV}" \
APP_REACT_DEBUGGER_RUNNING="${APP_REACT_DEBUGGER_RUNNING}" \
APP_REACT_DEVTOOLS_RUNNING="${APP_REACT_DEVTOOLS_RUNNING}" \
APP_REACT_REACTOTRON_RUNNING="${APP_REACT_REACTOTRON_RUNNING}" \
RUN_REACT_DEBUGGER="${RUN_REACT_DEBUGGER}" \
RUN_REACT_DEVTOOLS="${RUN_REACT_DEVTOOLS}" \
RUN_REACT_REACTOTRON="${RUN_REACT_REACTOTRON}" \
env \
  | sort \
  | grep -e npm_
